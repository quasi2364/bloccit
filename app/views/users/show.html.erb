<div class='row'>
	<div class='col-md-8'>
		<div class='media'>
			<br/>
			<% avatar_url = @user.avatar_url(128) %>
			<% if avatar_url %>
				<div class='media-left'>
					<%= image_tag avatar_url, class: 'media-object' %>
				</div>
			<% end %>
			<div class='media-body'>
				<h2 class='media-heading'><%= @user.name %></h2>
				<small>
					<%= pluralize(@user.posts.count, 'post') %>
					<%= pluralize(@user.comments.count, 'comment') %>
				</small>
			</div>
		</div>
	</div>
</div>

<% if user_has_posts?(current_user) %>
	<h2>Posts</h2>
	<%= render @user.posts %>
<% else %>
	<h2><%= @user.name %> has not submitted any posts.</h2>
<% end %>

<% if user_has_comments?(current_user) %>
	<h2>Comments</h2>
	<%= render @user.comments %>
<% else %>
	<h2><%= @user.name %> has not submitted any comments.</h2>
<% end %>

<% if user_has_favorites?(current_user) %>
	<h2>Favorites</h2>
	<%= render 'favorites/userfavs' %>
<% else %>
	<h2><%= @user.name %> has not submitted any favorites.</h2>
<% end %>