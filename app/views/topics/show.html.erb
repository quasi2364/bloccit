<div class='row'>
	<div class='col-md-8'>
		<h1><%= @topic.name %></h1>
	</div>
	<% if current_user %>
		<div class='col-md-4'>
			<%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>

			<% if user_is_authorized_for_topics? %>
				<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
				<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
			<% end %>
		</div>
	<% end %>
</div>
	<%= render @topic.posts %>
<div class='row'>
	<div class='col-md-8'>
		<p class='lead'><%= @topic.description %></p>

	</div>
</div>
