<h1>
	<%= @post.title %> <%= render partial: 'ratings/button', locals: {rating: @post.rating} %>
</br>
	<small>
		submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
	</small>
</h1>

<div class='row'>
	<div class='col-md-8'>
		<%= render partial: 'labels/list', locals: {labels: @post.labels} %>
		<br/>
	</div>
</div>
<br/>

<div class="row">
	<div class="col-md-8">
		<p><%= @post.body %> |
			<% if user_is_authorized_for_post?(@post) %>
				<%= link_to "Edit", edit_topic_post_path(@post.topic, @post) %> |
				<%= link_to "Delete Post", [@post.topic, @post], method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
			<% end %>
		</p>

		<div>
			<h3>Comments</h3>
			<%= render @post.comments %>
		</div>
		<% if current_user %>
			<%= render 'comments/form', comment: Comment.new, post: @post %>
		<% end %>
	</div>
</div>

