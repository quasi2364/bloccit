<h1>Create a new Ad</h1>

<div class="row">
	
	<div class="col-md-8">
		<%= form_for @advertisement do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
			</div>

			<div class="form-group">
				<%= f.label :copy %>
				<%= f.text_field :copy, class: 'form-control', placeholder: "Enter ad body" %>
			</div>

			<div class="form-group">
				<%= f.label :price %>
				<%= f.text_field :price, class: 'form-control', placeholder: "Enter ad price" %>
			</div>

			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>
